; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
max_line_length = 180
tab_width = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
